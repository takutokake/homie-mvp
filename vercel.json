{
  "rewrites": [
    { "source": "/auth/v1/callback", "destination": "/api/auth/callback" },
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/invite.html", "destination": "/web/invite.html" },
    { "source": "/login.html", "destination": "/web/login.html" },
    { "source": "/profile.html", "destination": "/web/profile.html" },
    { "source": "/signup.html", "destination": "/web/signup.html" },
    { "source": "/complete-profile.html", "destination": "/web/complete-profile.html" },
    { "source": "/", "destination": "/web/index.html" },
    { "source": "/:path*", "destination": "/web/:path*" }
  ],
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "buildCommand": "prisma generate && tsc",
  "outputDirectory": "web",
  "public": true
}
