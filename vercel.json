{
  "version": 2,
  "builds": [
    {
      "src": "api/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/schema.prisma"]
      }
    },
    {
      "src": "web/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.ts"
    },
    {
      "src": "/login.html",
      "dest": "/web/login.html"
    },
    {
      "src": "/signup.html", 
      "dest": "/web/signup.html"
    },
    {
      "src": "/complete-profile.html",
      "dest": "/web/complete-profile.html"
    },
    {
      "src": "/",
      "dest": "/web/index.html"
    }
  ],
  "functions": {
    "api/server.ts": {
      "maxDuration": 30
    }
  }
}
